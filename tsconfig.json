{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/@types/*",
        "resources/definitions/*"
      ]
    },
    "esModuleInterop": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ]
}